.good-item{
    width: 100%;
    height: 240rpx;
}
.nav{
    width: 100%;
    height: 100%;
    display: flex;
}
.left{
    width: 240rpx;
    height: 100%;
}
.left image{
    width: 100%;
}
.right{
    flex: 1;
    height: 100%;
    padding-left: 20rpx;
    position: relative;
}
.top{
    position: absolute;
    max-height: 160rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    font-size: 13px;
    color: #222222;
    top: 30rpx;
}
.bottom{
    position: absolute;
    bottom: 30rpx;
    color: var(--text-color-tint);
}