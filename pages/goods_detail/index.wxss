.good-detail {
    width: 100%;
    height: 100vh;
}
.scroll{
    height: calc(100vh - 118rpx);
}
.swiper {
    width: 100%;
    height: 450rpx;
    text-align: center;
}

.swiper-img {
    width: 60%;
}

.title {
    color: var(--text-color-tint);
    font-size: 18px;
}

.desc {
    font-size: 13px;
    display: flex;
    padding: 10rpx;
    border-top: 2px solid #f6f6f6;
    border-bottom: 2px solid #f6f6f6;
}

.name {
    width: 80%;
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.cart {
    border-left: 2px solid #f6f6f6;
    flex: 1;
    height: 70rpx;
    text-align: center;
}

.cart image {
    width: 36rpx;
    height: 36rpx;
}
.base{
    width: 100%;
}
.base-name{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    color: var(--text-color-tint);
    font-size: 32rpx;
}
.tool{
    width: 100%;
    height: 118rpx;
    display: flex;
    border-top: 2rpx solid #ededed;
}
.left{
    width: 50%;
    height: 100%;
    display: flex;
    text-align: center;
    align-items: center;
    font-size: 26rpx;
}
.left view{
   flex: 1; 
}
.img{
    width: 40rpx;
}
.tool-name{
    width: 100%;
}
.right{
    flex: 1;
    display: flex;
    align-items: center;
    color: #fff;
}
.right view{
    flex: 1;
    text-align: center;
    line-height: 118rpx;
}
.add-cart{
    background: #ffbd0d;
}
.buy{
    background: var(--text-color-tint);
}